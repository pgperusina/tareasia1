<!--                </select>-->
<!--            </div>-->
<!--        </div>-->
        <br>
        <div class="from-group row justify-content-md-center">
            <button type="submit" class="btn btn-primary btn-block col-sm-6" name="enviar">Ejecutar operación</button>
        </div>
    </form>
</div>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>