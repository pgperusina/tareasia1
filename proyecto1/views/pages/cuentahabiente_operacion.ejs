            <div class="col-sm-3">
                <input type="text" class="form-control"
                       id="monto" name="monto"
                       placeholder="Ingrese monto" required/>
            </div>
        </div><br>
        <div class="from-group row justify-content-md-center">
            <label for="cuenta_paga" class="col-sm-3">Cuenta paga</label>
            <div class="col-sm-3">
                <input type="text" class="form-control"
                       id="cuenta_paga" name="cuenta_paga"
                       placeholder="Ingrese cuenta que paga" required/>
            </div>
        </div><br>
        <div class="from-group row justify-content-md-center">
            <label for="cuenta_cobra" class="col-sm-3">Cuenta cobra</label>
            <div class="col-sm-3">
                <input type="text" class="form-control"
                       id="cuenta_cobra" name="cuenta_cobra"
                       placeholder="Ingrese cuenta que cobra" required/>
            </div>
        </div>
